	<recipe id="24641006006067">
		<title>Lenchen’s Schokoladenkuchen</title>
		<category id="122" parentId="19">
			<name>Backen</name>
		</category>
		<images>
			<image width="420" height="280">
				<author>brutzelstube</author>
				<source>http://static.chefkoch-cdn.de/ck.de/rezepte/2/2464/42942-420x280-fix-lenchen-s-schokoladenkuchen.jpg</source>
